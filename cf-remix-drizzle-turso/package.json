{
	"name": "my-remix-app",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "remix vite:build",
		"deploy": "npm run build && wrangler pages deploy ./build/client",
		"dev": "concurrently 'turso dev --db-file db/local.db' 'remix vite:dev'",
		"lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"start": "wrangler pages dev ./build/client",
		"typecheck": "tsc",
		"typegen": "wrangler types",
		"build-cf-types": "wrangler types",
		"preview": "npm run build && wrangler pages dev ./build/client",
		"db:gen": "drizzle-kit generate:sqlite --breakpoints",
		"db:test": "concurrently 'turso dev --db-file db/local.db' 'npx tsx db/testdata.ts'",
		"db:test:prod": "NODE_ENV=production npx tsx db/testdata.ts",
		"db:migrate": "concurrently 'turso dev --db-file db/local.db' 'npx tsx db/migrate.ts'",
		"db:migrate:prod": "NODE_ENV=production npx tsx db/migrate.ts"
	},
	"dependencies": {
		"@libsql/client": "^0.5.6",
		"@remix-run/cloudflare": "^2.9.2",
		"@remix-run/cloudflare-pages": "^2.9.2",
		"@remix-run/react": "^2.9.2",
		"isbot": "^4.4.0",
		"miniflare": "^3.20240512.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"uuid": "^9.0.1",
		"uuidv7": "^1.0.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240512.0",
		"@remix-run/dev": "^2.9.2",
		"@types/react": "^18.3.2",
		"@types/react-dom": "^18.3.0",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"concurrently": "^8.2.2",
		"drizzle-kit": "^0.20.18",
		"drizzle-orm": "^0.29.5",
		"eslint": "^8.57.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.2",
		"libsql": "^0.3.18",
		"node-fetch": "^3.3.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.11",
		"vite-tsconfig-paths": "^4.3.2",
		"wrangler": "^3.57.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
